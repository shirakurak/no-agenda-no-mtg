{
  "manifest_version": 3,
  "name": "no-agenda-no-mtg",
  "version": "1.2.1",
  "description": "Google Calendar の予定のタイトルに `meeting` が含まれていたら、説明欄に自動で `アジェンダはこちら：`を挿入します。",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "homepage_url": "https://github.com/shirakurak/no-agenda-no-mtg",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://calendar.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}